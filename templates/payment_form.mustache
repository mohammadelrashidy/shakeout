{{!
    @template paygw_shakeout/payment_form

    Shake-Out payment form template.

    Context variables required for this template:
    * paymenturl - URL for payment processing
    * amount - Payment amount
    * currency - Payment currency
    * description - Payment description

    Example context (json):
    {
        "paymenturl": "https://example.com/pay",
        "amount": "25.00",
        "currency": "USD",
        "description": "Course enrollment"
    }
}}
<div class="shakeout-payment-gateway">
    <div class="card">
        <div class="card-body text-center">
            <h5 class="card-title">{{#str}}paywitshakeout, paygw_shakeout{{/str}}</h5>
            <p class="card-text">{{#str}}gatewaydescription, paygw_shakeout{{/str}}</p>
            
            {{#amount}}
            <p class="h6 text-muted">{{#str}}amount, core{{/str}}: {{amount}} {{currency}}</p>
            {{/amount}}
            
            <button type="button" class="btn btn-primary btn-lg btn-shakeout-pay" id="shakeout-pay-btn">
                <i class="fa fa-credit-card" aria-hidden="true"></i> 
                {{#str}}paybutton, paygw_shakeout{{/str}}
            </button>
            
            <div id="shakeout-loading" class="mt-3" style="display: none;">
                <div class="spinner-border text-primary" role="status">
                    <span class="sr-only">{{#str}}processing, paygw_shakeout{{/str}}</span>
                </div>
                <p class="mt-2">{{#str}}processing, paygw_shakeout{{/str}}</p>
            </div>
        </div>
    </div>
</div>
